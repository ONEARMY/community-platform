{
  "name": "functions",
  "version": "1.0.0",
  "__NOTE__:": "avoid hoisting for webpack and other conflicts",
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "scripts": {
    "start": "ts-node scripts/start.ts",
    "serve:live": "yarn copyDevConfig && yarn serve",
    "lint": "tslint --project tsconfig.json",
    "build": "./node_modules/.bin/webpack",
    "watch": "./node_modules/.bin/webpack --watch",
    "copyDevConfig": "firebase functions:config:get > .runtimeconfig.json",
    "db:backup:local": "firestore-export -a service.json -b backup.json -p",
    "shell": "yarn build && firebase functions:shell",
    "emulator:test": "firebase emulators:exec --project community-platform-emulated 'jest .'",
    "emulator:test:watch": "firebase emulators:exec --ui --project community-platform-emulated 'jest . --watch'",
    "emulator:start": "firebase emulators:start",
    "emulator:seed": "ts-node scripts/emulator/seed.ts",
    "emulator": "yarn emulator:seed && yarn emulator:start",
    "test": "jest ."
  },
  "main": "index.js",
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dateformat": "^3.0.3",
    "express": "^4.17.1",
    "firebase-admin": "11.4.1",
    "firebase-functions": "4.1.1",
    "firebase-tools": "11.18.0",
    "fs-extra": "^9.0.1",
    "google-auth-library": "^6.1.1",
    "googleapis": "^61.0.0",
    "log-update": "^4.0.0",
    "node-fetch": "2",
    "oa-shared": "workspace:*",
    "request": "^2.88.2",
    "sharp": "^0.30.1",
    "sitemap": "^7.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/concurrently": "^6.2.1",
    "@types/cors": "^2.8.8",
    "@types/dateformat": "^3.0.1",
    "@types/fs-extra": "^9.0.2",
    "@types/jest": "^29.2.0",
    "@types/node": "18",
    "@types/request": "^2.48.5",
    "@types/sharp": "^0.26.0",
    "@types/uuid": "^9.0.0",
    "@types/webpack": "^5.28.0",
    "@types/webpack-node-externals": "^2.5.3",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^6.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "firebase-functions-test": "^3.0.0",
    "jest": "29.2.2",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "4.5.5",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": "18"
  },
  "private": true
}
