{
  "compilerOptions": {
    "lib": ["es6", "DOM"],
    "module": "CommonJS",
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "../types"],
  "exclude": ["src/**/*.test.tsx", "../src/**/*.test.tsx"]
}
