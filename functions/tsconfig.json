{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@OAModels/*": ["../src/models/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"]
}
